{
    "editor.fontFamily": "'Fira Code', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.formatOnSave": true,
    "editor.lineNumbers": "relative",
    "editor.suggestSelection": "first",
    "extensions.ignoreRecommendations": true,
    "files.autoGuessEncoding": true,
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/*.swp": true,
        "**/*~": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "http.proxyStrictSSL": false,
    "team.showWelcomeMessage": false,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.statusBar.feedback.visible": false,
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, BreakBeforeBraces: Attach, ColumnLimit: 100, IndentWidth: 4 }",
    // "terminal.integrated.shell.windows": "C:\\msys64\\usr\\bin\\bash.exe",
    // "terminal.integrated.env.windows": {
    //     "MSYSTEM": "MINGW64",
    //     "CHERE_INVOKING": "1"
    // },
    // "terminal.integrated.shellArgs.windows": [
    //     "--login"
    // ],
    "java.errors.incompleteClasspath.severity": "ignore",
    "python.venvPath": ".venv",
    "python.pythonPath": "C:\\Users\\13080_Kitagawa\\AppData\\Local\\Programs\\Python\\Python38\\python.exe",
    "python.formatting.provider": "black",
    "python.jediEnabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.flake8Args": [
        "--max-line-length=88",
        "--ignore=E203"
    ],
    // whitelist to remove lint errors
    "python.linting.pylintArgs": [
        "--extension-pkg-whitelist=cv2"
    ],
    "python.testing.unittestEnabled": true,
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "${workspaceFolder}/src/main/python",
        "-p",
        "test_*.py"
    ],
    "materialTheme.autoApplyIcons": true,
    // cf. https://ohmyenter.com/comment-line-and-next-line-with-vscode/
    "macros": {
        "commentLineAndNext": [
            "editor.action.commentLine",
            "cursorDown",
        ],
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "u"
            ],
            "commands": [
                "undo"
            ]
        },
        {
            "before": [
                "<C-r>"
            ],
            "commands": [
                "redo"
            ]
        },
    ],
    "python.languageServer": "Microsoft",
}
